# Copy to system clipboard
set selection-clipboard clipboard

set recolor true

# Setup colors to match base 16 tomorrow theme
set default-bg "#1d1f21"
set default-fg "#c5c8c6"

set statusbar-bg "#1d1f21"
set statusbar-fg "#e8ae5b"

set inputbar-bg "#1d1f21"
set inputbar-fg "#86af80"

set notification-bg "#1d1f21"
set notification-fg "#c5c8c6"

set notification-warning-bg "#b294bb"
set notification-warning-fg "#ffffff"

set notification-error-bg "#cc6666"
set notification-error-fg "#ffffff"

set completion-bg "#1d1f21"

set completion-highlight-bg "#1d1f21"
set completion-highlight-fg "#81a2be"

set completion-group-bg "#1d1f21"
set completion-group-fg "#86af80"

set index-bg "#1d1f21"
set index-fg "#c5c8c6"

set index-active-bg "#1d1f21"
set index-active-fg "#81a2be"

set render-loading-bg "#1d1f21"
set render-loading-fg "#86af80"

set highlight-color "#8abeb7"
set highlight-active-color "#f0c674"

set recolor-lightcolor "#1d1f21"
set recolor-darkcolor "#c5c8c6"

set font "Source Code Pro Regular 12"

# Display hidden directories while opening files
set show-hidden true