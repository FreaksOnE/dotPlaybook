[rerere]
	enabled = 1

[core]
	pager = tig
	attributesfile = ~/.gitattributes

[color]
	pager = false
	ui = auto

[tig]
    diff-highlight = true

[push]
	default = simple

[pull]
	rebase = true

[rebase]
	autoStash = true

[diff "gpg"]
	textconv = gpg --no-tty --decrypt

[include]
    path = ~/.gitconfig.local
